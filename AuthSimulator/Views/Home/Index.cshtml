<div id="mainContainer" class="p-3 mt-3 border shadow">
</div>

<script>
    const { createApp } = Vue;

    function navigatePage(id) {
        
        let panel = "";
        let panelurl = "";

        switch (id) {
            case "0":
                panel = "/gui/home";
                panelurl = "/home/index";
                break;
            case "1":
                panel = "/gui/user";
                panelurl = "/home/index#user";
                break;
            case "2":
                panel = "/gui/client";
                panelurl = "/home/index#client";
                break;
            case "3":
                panel = "/gui/parameter";
                panelurl = "/home/index#parameter";
                break;
        }

        console.log(panel);
        $("#mainContainer").load(panel, function () {
            window.history.pushState({ panelid: id }, "", panelurl);

            $(".nav-link").removeClass("active");
            $("[data-tabindex='" + id + "']").addClass("active");
        });
    }

    $(document).ready(function () {

        let url = document.location.href;
        if (url.indexOf("#") > 0) {
            let code = url.split("#")[1];
            console.log(code);
            switch (code) {

                case "user":
                    navigatePage("1");
                    break;
                case "client":
                    navigatePage("2");
                    break;
                case "parameter":
                    navigatePage("3");
                    break;
                case "home":
                default:
                    navigatePage("0");
                    break;
            }
        } else {
            navigatePage("0");
        }
    });

    window.onpopstate = function (e) {
        if (e.state) {
            //navigatePage(e.state.panelid);
        }
    };

    $("#administration_menu .nav-link").click(function (e) {
        e.preventDefault();
        let index = $(this).attr("data-tabindex");
        navigatePage(index);
    });
</script>